
package workflows

import gwf.util.task.ExecuteSql
import gwf.util.task.GenericAction

log.info 'Workflow found in workflows'

executor {
    properties.TEST = 'Blubb'
}

tasks {

    task(GenericAction) {
        name = "task 1"
        log.info "$name configured"
    }

    task("task 2", GenericAction) {

        action {
            log.info "$name first action"
        }

        action {
            log.info "$name second action"
        }

        log.info "$name configured"
    }

    task("sql task", ExecuteSql) {

        sql {
            "select * from dual"
        }

        log.info "$name configured"
    }
}
